 <script>
    document.addEventListener('DOMContentLoaded', function() {
    
    // Lấy tất cả các nút filter
    const filterButtons = document.querySelectorAll('.thietke-filter-buttons .thietke-btn');
    
    // Lấy tất cả các gallery
    const galleries = document.querySelectorAll('.thietke-galleries-wrapper .thietke-gallery-grid');

    // Thêm sự kiện click cho mỗi nút
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            
            // 1. Lấy ID của gallery mục tiêu từ attribute 'data-target'
            const targetId = this.getAttribute('data-target');
            const targetGallery = document.getElementById(targetId);

            // 2. Xóa class 'active' khỏi tất cả các nút
            filterButtons.forEach(btn => btn.classList.remove('active'));
            
            // 3. Thêm class 'active' cho nút vừa được bấm
            this.classList.add('active');
            
            // 4. Ẩn tất cả các gallery
            galleries.forEach(gallery => {
                gallery.classList.remove('thietke-gallery-active');
            });
            
            // 5. Hiển thị gallery mục tiêu
            if (targetGallery) {
                targetGallery.classList.add('thietke-gallery-active');
            }
        });
    });
});
 </script>
